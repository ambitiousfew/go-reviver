{
  "name": "go-reviver",
  "displayName": "Go Reviver",
  "description": "To make the Golang revive linter more configurable vscode settings",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:go",
    "onFileSystemChange"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Go Reviver",
      "type": "object",
      "properties": {
        "reviver.enable": {
          "type": "boolean",
          "default": false,
          "description": "Enable/disable revive lint wrapper"
        },
        "reviver.lintLevel": {
          "type": "string",
          "default": "package",
          "enum": ["package", "file"],
          "description": "unsupported: linting is done at package level based on the file being saved or opened"
        },
        "reviver.fallback": {
          "type": "object",
          "": {
            "": {
              "useStaticFilename": false,
              "staticFilename": "revive.toml"
            }
          }
        },
        "reviver.projects": {
          "type": "object",
          "default": {
            "": {
              "useStaticFilename": false,
              "staticFilename": "revive.toml"
            }
          },
          "description": "Ability to lint on per-project basis using the workspace name or static file"
        }
      }
    },
    "commands": [
      {
        "command": "go-reviver.lint.package",
        "title": "Lint Package"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
